<script>
document.addEventListener("DOMContentLoaded", function() {
  const input = document.getElementById('sidebar-search-input');

  function filterSidebar() {
    const filter = input.value.toLowerCase();
    const navItems = document.querySelectorAll('#sidebar-items .nav-item:not(.nav-item-header)');
    const navHeaders = document.querySelectorAll('#sidebar-items .nav-item-header');
    let visibleCount = 0;

    navItems.forEach(item => {
      const text = item.textContent.toLowerCase();
      item.style.display = text.includes(filter) ? '' : 'none';
      if (text.includes(filter)) visibleCount++;
    });

    navHeaders.forEach(header => {
      let next = header.nextElementSibling;
      let hasVisible = false;
      while (next && !next.classList.contains('nav-item-header')) {
        if (next.classList.contains('nav-item') && next.style.display !== 'none') hasVisible = true;
        next = next.nextElementSibling;
      }
      header.style.display = hasVisible || filter === '' ? '' : 'none';
    });

    const sidebar = document.querySelector('.pv-nav');
    let noResultMsg = sidebar.querySelector('.no-results-message');

    if (visibleCount === 0 && filter.length > 0) {
      if (!noResultMsg) {
        noResultMsg = document.createElement('li');
        noResultMsg.className = 'nav-item no-results-message';
        noResultMsg.innerHTML = `
          <div class="nav-link pv-no-results">
            <i class="ph-magnifying-glass me-2"></i>
            <div>
              <strong>Nenhum resultado encontrado</strong>
              <small>Tente usar termos diferentes</small>
            </div>
          </div>`;
        sidebar.appendChild(noResultMsg);
      }
    } else if (noResultMsg) {
      noResultMsg.remove();
    }
  }

  input.addEventListener('keyup', filterSidebar);

  document.querySelectorAll('.nav-item-submenu > a').forEach(link => {
    link.addEventListener('click', function(e) {
      e.preventDefault();
      const parent = link.parentElement;
      parent.classList.toggle('open');
    });
  });

  document.querySelectorAll('.nav-item-submenu').forEach(submenu => submenu.classList.remove('open'));
});
</script>
