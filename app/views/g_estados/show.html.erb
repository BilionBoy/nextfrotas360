<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar G Estado</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @g_estado %>">
          <p>
            <strong>Descricao:</strong>
            <%= @g_estado.descricao %>
          </p>
          <p>
            <strong>Uf:</strong>
            <%= @g_estado.uf %>
          </p>
          <p>
            <strong>G Pais:</strong>
            <%= @g_estado.g_pais %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_g_estado_path(@g_estado), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", g_estados_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @g_estado, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
