<%= render "shared/context_nav", title: t("activerecord.models.#{FFinanceiro.model_name.i18n_key}.other") do  %>
  <span class="breadcrumb-item"><%= link_to t("activerecord.models.#{FFinanceiro.model_name.i18n_key}.other"), f_financeiros_path, class: "text-dark" %></span>
  <span class="breadcrumb-item active"><%= t("helpers.submit.#{params[:action]}") %></span>
<% end %>
<%= simple_form_for(@f_financeiro) do |f| %>
  <div class="card">
    <div class="card-header">
      <h5 class="my-0">
        <%= @f_financeiro.new_record? ? "Incluir " : "Editar " %><%= t("activerecord.models.#{FFinanceiro.model_name.i18n_key}.one") %>
      </h5>
    </div>
    <div class="card-body">
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="row">
        <div class="col-3">
          <%= f.input :f_empresa_fornecedora_id, collection: FEmpresaFornecedora.all, label_method: :nome_fantasia, value_method: :id, prompt: "Selecione a Empresa Fornecedora" %>
        </div>
        <div class="col-3">
          <%= f.input :o_categoria_servico_id, collection: OCategoriaServico.all, label_method: :descricao, value_method: :id, prompt: "Selecione a Categoria do ServiÃ§o" %>
        </div>
        <div class="col-3">
          <%= f.input :saldo_total, input_html: { class: "capitalize"}, placeholder: "Saldo total"  %>
        </div>
        <div class="col-3">
          <%= f.input :saldo_disponivel, input_html: { class: "capitalize"}, placeholder: "Saldo disponivel"  %>
        </div>
        <div class="col-3">
          <%= f.input :saldo_reservado, input_html: { class: "capitalize"}, placeholder: "Saldo reservado"  %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= btn_submit(f) %>
      <%= link_to "Voltar", f_financeiros_path, class: "btn btn-light" %>
    </div>
  </div>
<% end %>