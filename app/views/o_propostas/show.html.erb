<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar Proposta</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @o_proposta %>">
        <p>
          <strong>O Cotação:</strong>
          <%= @o_proposta.o_cotacao&.descricao_completa %>
        </p>
        <p>
          <strong>Empresa Fornecedora:</strong>
          <%= @o_proposta.f_empresa_fornecedora&.nome_fantasia %>
        </p>
        <p>
          <strong>Usuário Envio:</strong>
          <%= @o_proposta.usuario_envio&.nome %>
        </p>
        <p>
          <strong>Valor Total:</strong>
          <%= number_to_currency(@o_proposta.valor_total, unit: "R$", separator: ",", delimiter: ".") %>
        </p>
        <p>
          <strong>Prazo Execução (dias):</strong>
          <%= @o_proposta.prazo_execucao_dias %>
        </p>
        <p>
          <strong>Validade Proposta:</strong>
          <%= @o_proposta.validade_proposta.present? ? l(@o_proposta.validade_proposta, format: :long) : "-" %>
        </p>
        <p>
          <strong>Status:</strong>
          <%= @o_proposta.o_status&.descricao %>
        </p>
        <p>
          <strong>Versão:</strong>
          <%= @o_proposta.versao %>
        </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_o_proposta_path(@o_proposta), class: "btn btn-primary" do %>
          <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", o_propostas_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @o_proposta, method: :delete, class: "btn btn-outline-danger border-0", data: { confirm: "Tem certeza que deseja deletar esta proposta?" } %>
    </div>
  </div>
</div>
