<%= render "shared/context_nav", title: "Meus Orçamentos Enviados / Aprovados" do %>
  <span class="breadcrumb-item">
    <%= link_to "Propostas", o_propostas_path, class: "text-dark" %>
  </span>
  <span class="breadcrumb-item active">Orçamentos</span>
<% end %>
<div class="card">
  <div class="card-header">
    <h5>Orçamentos Enviados / Aprovados</h5>
  </div>
  <div class="card-body">
    <% if @o_propostas.any? %>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>ID</th>
            <th>Descrição Cotação</th>
            <th>Status</th>
            <th>Valor Total</th>
            <th>Data de Envio</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @o_propostas.each do |p| %>
            <tr>
              <td><%= p.id %></td>
              <td><%= p.o_cotacao.o_solicitacao.descricao if p.o_cotacao&.o_solicitacao %></td>
              <td><%= p.o_status.descricao %></td>
              <td><%= number_to_currency(p.valor_total || 0) %></td>
              <td><%= l(p.created_at, format: :short) %></td>
              <td>
                <%= link_to "Visualizar", o_proposta_path(p), class: "btn btn-sm btn-primary" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>Nenhum orçamento enviado ou aprovado.</p>
    <% end %>
  </div>
</div>
