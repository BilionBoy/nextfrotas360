<%= render "shared/context_nav", title: t("activerecord.models.#{OProposta.model_name.i18n_key}.other"), new_path: new_o_proposta_path do  %>
  <span class="breadcrumb-item active"><%= t("activerecord.models.#{OProposta.model_name.i18n_key}.other") %></span>
<% end %>
<div class="card">
  <div class="card-header d-flex">
    <%= search_form_for @q, html: { class: "d-flex gap-2" , autocomplete: "off"} do |f| %>
      <%= f.search_field :o_cotacao_o_solicitacao_descricao_cont, class: "form-control", placeholder: "Pesquisar" %>
      <%= f.button(type: 'submit', class: 'btn btn-info') { tag.i(class: 'ph-magnifying-glass') } %>
      <%= link_to  tag.i(class: 'ph-x-circle'), o_propostas_path, class: "btn btn-light" if params[:q] %>
    <% end %>
  </div>
  <div class="card-body">
    <div class= "table-responsive">
      <table class="table table-sm table-bordered table-striped">
        <thead>
          <tr>
            <th class="text-center">Ações</th>
            <th><%= sort_link(@q, :o_cotacao, t("activerecord.attributes.cotacao")) %></th>
            <th><%= sort_link(@q, :empresa_fornecedora, t("activerecord.attributes.empresa_fornecedora")) %></th>
            <th><%= sort_link(@q, :usuario_envio, t("activerecord.attributes.usuario")) %></th>
            <th><%= sort_link(@q, :valor_total, t("activerecord.attributes.valor_total")) %></th>
            <th><%= sort_link(@q, :prazo_execucao_dias, t("activerecord.attributes.prazo_execucao_dias")) %></th>
            <th><%= sort_link(@q, :validade_proposta, t("activerecord.attributes.validade_proposta")) %></th>
            <th><%= sort_link(@q, :o_status, t("activerecord.attributes.status")) %></th>
          </tr>
        </thead>
        <tbody>
          <% @o_propostas.each do |o_proposta| %>
            <tr>
              <td class="text-center">
                <div class="dropdown-toggle">
                  <a href="#" class="text-body dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="ph-gear"></i>
                  </a>
                  <div class="dropdown-menu" style="">
                    <div class="dropdown-header">Opções</div>
                    <%= link_to edit_o_proposta_path(o_proposta), class: "dropdown-item" do %>
                      <i class="ph-pen me-2"></i> Editar
                    <% end %>
                    <%= form_for o_proposta, method: :delete do |f| %>
                      <a class="dropdown-item hand-pointer " data-confirm-delete="<%= o_proposta_path(o_proposta) %>" data-csrf-token="<%= form_authenticity_token %>">
                        <i class="ph-trash-simple me-2"></i>Excluir
                      </a>
                    <% end %>
                    <td><%= o_proposta.o_cotacao&.descricao_completa %></td>
                    <td><%= o_proposta.f_empresa_fornecedora&.nome_fantasia %></td>
                    <td><%= o_proposta.usuario_envio&.nome %></td>
                    <td><%= number_to_currency(o_proposta.valor_total) %></td>
                    <td><%= o_proposta.prazo_execucao_dias %></td>
                    <td><%= l(o_proposta.validade_proposta, format: :short) if o_proposta.validade_proposta %></td>
                    <td><%= o_proposta.o_status&.descricao %></td>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer">
    <%= pagy_bootstrap_nav(@pagy, link_extra: 'class="btn btn-outline-secondary btn-sm mx-1"').html_safe %>
  </div>
</div>
