<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar G Bairro</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @g_bairro %>">
          <p>
            <strong>Descricao:</strong>
            <%= @g_bairro.descricao %>
          </p>
          <p>
            <strong>G Municipio:</strong>
            <%= @g_bairro.g_municipio %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_g_bairro_path(@g_bairro), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", g_bairros_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @g_bairro, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
