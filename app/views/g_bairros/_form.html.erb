<%= render "shared/context_nav", title: t("activerecord.models.#{GBairro.model_name.i18n_key}.other") do  %>
  <span class="breadcrumb-item"><%= link_to t("activerecord.models.#{GBairro.model_name.i18n_key}.other"), g_bairros_path, class: "text-dark" %></span>
  <span class="breadcrumb-item active"><%= t("helpers.submit.#{params[:action]}") %></span>
<% end %>
<%= simple_form_for(@g_bairro) do |f| %>
  <div class="card">
    <div class="card-header">
      <h5 class="my-0">
        <%= @g_bairro.new_record? ? "Incluir " : "Editar " %><%= t("activerecord.models.#{GBairro.model_name.i18n_key}.one") %>
      </h5>
    </div>
    <div class="card-body">
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="row">
        <div class="col-12">
          <%= f.input :descricao, input_html: { class: "capitalize"}, placeholder: "Descricao"  %>
        </div>
        <div class="col-12">
          <%= f.input :g_municipio_id, collection: GMunicipio.all, label_method: :descricao, value_method: :id, prompt: "Selecione o PaÃ­s" %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= btn_submit(f) %>
      <%= link_to "Voltar", g_bairros_path, class: "btn btn-light" %>
    </div>
  </div>
<% end %>