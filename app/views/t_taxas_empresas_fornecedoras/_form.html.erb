<%= render "shared/context_nav", title: t("activerecord.models.#{TTaxaEmpresaFornecedora.model_name.i18n_key}.other") do  %>
  <span class="breadcrumb-item"><%= link_to t("activerecord.models.#{TTaxaEmpresaFornecedora.model_name.i18n_key}.other"), t_taxas_empresas_fornecedoras_path, class: "text-dark" %></span>
  <span class="breadcrumb-item active"><%= t("helpers.submit.#{params[:action]}") %></span>
<% end %>
<%= simple_form_for(@t_taxa_empresa_fornecedora) do |f| %>
  <div class="card">
    <div class="card-header">
      <h5 class="my-0">
        <%= @t_taxa_empresa_fornecedora.new_record? ? "Incluir " : "Editar " %><%= t("activerecord.models.#{TTaxaEmpresaFornecedora.model_name.i18n_key}.one") %>
      </h5>
    </div>
    <div class="card-body">
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="row">
        <div class="col-12">
          <%= f.input :t_taxa_id, collection: TTaxa.all, label_method: :nome_com_percentual, value_method: :id, prompt: "Selecione a Taxa" %>        </div>
        <div class="col-12">
          <%= f.input :f_empresa_fornecedora_id, collection: FEmpresaFornecedora.all, label_method: :nome_fantasia, value_method: :id, prompt: "Selecione a Empresa Fornecedora" %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= btn_submit(f) %>
      <%= link_to "Voltar", f_empresas_fornecedoras_path, class: "btn btn-light" %>
    </div>
  </div>
<% end %>