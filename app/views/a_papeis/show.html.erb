<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar A Papel</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @a_papel %>">
          <p>
            <strong>Nome:</strong>
            <%= @a_papel.nome %>
          </p>
          <p>
            <strong>Descricao:</strong>
            <%= @a_papel.descricao %>
          </p>
          <p>
            <strong>A Status:</strong>
            <%= @a_papel.a_status %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_a_papel_path(@a_papel), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", a_papeis_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @a_papel, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
