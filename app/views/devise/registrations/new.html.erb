<div class="auth-container">
  <!-- Hero com imagem -->
  <div class="auth-hero">
    <div class="hero-overlay">
      <h2>Bem-vindo ao <span>NextFrotas360</span></h2>
    </div>
  </div>
  <!-- Card do formulário -->
  <div class="auth-content">
    <div class="auth-card">
      <!-- Logo do card -->
      <div class="auth-logo">F</div>
      <!-- Título e subtítulo -->
      <h1 class="auth-title text-center mb-3">Crie sua conta</h1>
      <p class="auth-subtitle text-center mb-4">Preencha os campos abaixo para se registrar</p>
      <!-- Formulário -->
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "auth-form", novalidate: true }) do |f| %>
        <% if resource.errors.any? %>
          <div class="auth-errors mb-3">
            <strong>⚠️ Verifique os erros abaixo:</strong>
            <ul>
              <% resource.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="row g-3">
          <div class="col-md-6">
            <%= f.input :email, label: "E-mail", required: true, autofocus: true, input_html: { autocomplete: "email", placeholder: "seu@email.com", class: "form-control" } %>
          </div>
          <div class="col-md-6">
            <%= f.input :nome, label: "Nome completo", required: true, input_html: { placeholder: "Ex: João da Silva", class: "form-control" } %>
          </div>
          <div class="col-md-6">
            <%= f.input :password, label: "Senha", required: true, hint: ("Mínimo #{@minimum_password_length} caracteres" if @minimum_password_length), input_html: { autocomplete: "new-password", placeholder: "••••••••", class: "form-control" } %>
          </div>
          <div class="col-md-6">
            <%= f.input :password_confirmation, label: "Confirme a senha", required: true, input_html: { autocomplete: "new-password", placeholder: "••••••••", class: "form-control" } %>
          </div>
          <div class="col-md-6">
            <%= f.input :cpf, label: "CPF", required: true, input_html: { maxlength: 11, placeholder: "Somente números", class: "form-control" } %>
          </div>
          <div class="col-md-6">
            <%= f.input :telefone, label: "Telefone", required: true, input_html: { placeholder: "(99) 99999-9999", class: "form-control" } %>
          </div>
          <div class="col-md-6">
            <%= f.input :a_tipo_usuario_id, label: "Tipo de Usuário", required: true, collection: ATipoUsuario.all, prompt: "Selecione o tipo de usuário", label_method: :descricao, value_method: :id, input_html: { class: "form-select" } %>
          </div>
          <div class="col-md-6">
            <%= f.input :a_unidade_id, label: "Unidade", required: true, collection: AUnidade.all, prompt: "Selecione a Unidade", label_method: :nome_fantasia, value_method: :id, input_html: { class: "form-select" } %>
          </div>
          <div class="col-md-6">
            <%= f.input :a_cargo_id, label: "Cargo", required: true, collection: ACargo.all, prompt: "Selecione o Cargo", label_method: :descricao, value_method: :id, input_html: { class: "form-select" } %>
          </div>
          <div class="col-md-6">
            <%= f.input :a_status_id, label: "Status do Usuário", required: true, collection: AStatus.all, prompt: "Selecione o Status do Usuário", label_method: :descricao, value_method: :id, input_html: { class: "form-select" } %>
          </div>
        </div>
        <div class="mt-4 d-flex justify-content-center">
          <%= f.button :submit, "Criar conta", class: "btn btn-primary btn-lg px-5", data: { disable_with: "Criando..." } %>
        </div>
      <% end %>
      <div class="mt-3 text-center auth-links">
        <%= link_to "Já possui uma conta? Entre aqui", new_session_path(resource_name), class: "auth-link me-3" %>
      </div>
    </div>
  </div>
</div>
<style>
  .auth-container {
    display: flex;
    min-height: 100vh;
    background: #f5f7fa;
    font-family: 'Inter', sans-serif;
    flex-wrap: nowrap;
  }

  /* Hero */
  .auth-hero {
    flex: 1;
    background: url('https://images.unsplash.com/photo-1507679799987-c73779587ccf') center/cover no-repeat;
    border-top-left-radius: 24px;
    border-bottom-left-radius: 24px;
    display: flex;
    align-items: flex-end;
    justify-content: flex-start;
  }

  .hero-overlay {
    background: rgba(0,0,0,0.3);
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fff;
    font-size: 2rem;
    font-weight: 600;
  }

  /* Card */
  .auth-content {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .auth-card {
    width: 100%;
    max-width: 600px;
    padding: 3rem;
    border-radius: 24px;
    background: rgba(255,255,255,0.85);
    backdrop-filter: blur(20px);
    box-shadow: 0 12px 40px rgba(0,0,0,0.12);
    text-align: center;
    animation: fadeInUp 0.6s ease;
  }

  /* Logo */
  .auth-logo {
    width: 60px;
    height: 60px;
    background: #4e73df;
    color: #fff;
    border-radius: 12px;
    display: flex;
    justify-content: center;
    align-items: center;
    font-weight: bold;
    font-size: 1.5rem;
    margin: 0 auto 20px auto;
  }

  /* Inputs e botões */
  .auth-form .form-control,
  .auth-form .form-select {
    border-radius: 12px;
    padding: 0.75rem 1rem;
    border: 1px solid #d1d5db;
    background: #fff;
    transition: all 0.2s ease;
  }

  .auth-form .form-control:focus,
  .auth-form .form-select:focus {
    border-color: #4e73df;
    box-shadow: 0 0 0 3px rgba(78,115,223,0.2);
    outline: none;
  }

  .btn-primary {
    background: #4e73df;
    border: none;
    color: #fff;
    font-weight: 600;
    padding: 0.75rem 2rem;
    border-radius: 12px;
    transition: all 0.2s ease;
  }

  .btn-primary:hover {
    background: #3752b4;
  }

  /* Links */
  .auth-links a, .auth-link {
    color: #4e73df;
    text-decoration: none;
    font-weight: 500;
  }

  .auth-links a:hover, .auth-link:hover {
    text-decoration: underline;
  }

  /* Responsividade */
  @media (max-width: 991px) {
    .auth-container {
      flex-direction: column;
    }
    .auth-hero {
      display: none;
    }
    .auth-card {
      border-radius: 24px;
    }
  }

  /* Animação */
  @keyframes fadeInUp {
    0% { opacity: 0; transform: translateY(20px); }
    100% { opacity: 1; transform: translateY(0); }
  }
</style>
