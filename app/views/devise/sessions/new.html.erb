<div class="auth-container">
  <div class="auth-card">
    <div class="auth-logo">F</div>
    <h1 class="auth-title">NextFrotas360</h1>
    <p class="auth-subtitle">O sistema CRM completo para gestão de frotas</p>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "auth-form", novalidate: true }) do |f| %>
      <% if resource.errors.any? %>
        <div class="auth-errors">
          <strong>⚠️ Verifique os erros abaixo:</strong>
          <ul>
            <% resource.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-inputs">
        <%= f.input :email, required: true, label: "E-mail",  input_html: { autocomplete: "email", autofocus: true, placeholder: "Digite seu e-mail" } %>
        <%= f.input :password, required: true, label: "Senha",  input_html: { autocomplete: "current-password", placeholder: "Digite sua senha" } %>
        <% if devise_mapping.rememberable? %>
          <%= f.input :remember_me, as: :boolean, label: "Lembrar de mim" %>
        <% end %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Entrar", class: "btn-primary", data: { disable_with: "Entrando..." } %>
      </div>
    <% end %>
    <div class="auth-links">
      <% if devise_mapping.recoverable? %>
        <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "auth-link" %>
      <% end %>
      <% if devise_mapping.registerable? %>
        <%= link_to "Criar nova conta", new_registration_path(resource_name), class: "auth-link" %>
      <% end %>
    </div>
  </div>
</div>
<style>
  .auth-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  padding: 24px;
  }

  .auth-card {
  background: var(--card);
  border-radius: var(--radius);
  padding: 32px;
  box-shadow: 0 6px 18px rgba(8, 10, 15, 0.08);
  width: 100%;
  max-width: 420px;
  text-align: center;
  }

  .auth-logo {
  width: 60px;
  height: 60px;
  border-radius: 14px;
  background: var(--brand);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-weight: 800;
  font-size: 22px;
  margin: 0 auto 16px;
  }
</style>
