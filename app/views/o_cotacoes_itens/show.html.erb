<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar O Cotacao Item</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @o_cotacao_item %>">
          <p>
            <strong>Descricao:</strong>
            <%= @o_cotacao_item.descricao %>
          </p>
          <p>
            <strong>O Cotacao:</strong>
            <%= @o_cotacao_item.o_cotacao %>
          </p>
          <p>
            <strong>O Categoria Servico:</strong>
            <%= @o_cotacao_item.o_categoria_servico %>
          </p>
          <p>
            <strong>Quantidade:</strong>
            <%= @o_cotacao_item.quantidade %>
          </p>
          <p>
            <strong>Valor Unitario:</strong>
            <%= @o_cotacao_item.valor_unitario %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_o_cotacao_item_path(@o_cotacao_item), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", o_cotacoes_itens_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @o_cotacao_item, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
