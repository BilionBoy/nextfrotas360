<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar G Centro Custo</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @g_centro_custo %>">
          <p>
            <strong>Nome:</strong>
            <%= @g_centro_custo.nome %>
          </p>
          <p>
            <strong>Codigo Dotacao:</strong>
            <%= @g_centro_custo.codigo_dotacao %>
          </p>
          <p>
            <strong>G Tipo Centro Custo:</strong>
            <%= @g_centro_custo.g_tipo_centro_custo %>
          </p>
          <p>
            <strong>A Unidade:</strong>
            <%= @g_centro_custo.a_unidade %>
          </p>
          <p>
            <strong>Valor Inicial:</strong>
            <%= @g_centro_custo.valor_inicial %>
          </p>
          <p>
            <strong>Saldo Atual:</strong>
            <%= @g_centro_custo.saldo_atual %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_g_centro_custo_path(@g_centro_custo), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", g_centros_custos_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @g_centro_custo, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
