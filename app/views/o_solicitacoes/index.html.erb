<%= render "shared/context_nav", title: t("activerecord.models.#{OSolicitacao.model_name.i18n_key}.other"), new_path: new_o_solicitacao_path do  %>
  <span class="breadcrumb-item active"><%= t("activerecord.models.#{OSolicitacao.model_name.i18n_key}.other") %></span>
<% end %>
<div class="card">
  <div class="card-header d-flex">
    <%= search_form_for @q, html: { class: "d-flex gap-2" , autocomplete: "off"} do |f| %>
      <%= f.search_field :numero_cont, class: "form-control", placeholder: "Pesquisar" %>
      <%= f.button(type: 'submit', class: 'btn btn-info') { tag.i(class: 'ph-magnifying-glass') } %>
      <%= link_to  tag.i(class: 'ph-x-circle'), o_solicitacoes_path, class: "btn btn-light" if params[:q] %>
    <% end %>
  </div>
  <div class="card-body">
    <div class= "table-responsive">
      <table class="table table-sm table-bordered table-striped">
        <thead>
          <tr>
            <th class="text-center">Ações</th>
            <th><%= sort_link(@q, :numero, t("activerecord.attributes.o_solicitacao.numero")) %></th>
            <th><%= sort_link(@q, :solicitante, t("activerecord.attributes.o_solicitacao.solicitante")) %></th>
            <th><%= sort_link(@q, :g_veiculo, t("activerecord.attributes.o_solicitacao.veiculo")) %></th>
            <th><%= sort_link(@q, :g_centro_custo, t("activerecord.attributes.o_solicitacao.centro_custo")) %></th>
            <th><%= sort_link(@q, :o_tipo_solicitacao, t("activerecord.attributes.o_solicitacao.tipo_solicitacao")) %></th>
            <th><%= sort_link(@q, :o_categoria_servico, t("activerecord.attributes.o_solicitacao.categoria_servico")) %></th>
            <th><%= sort_link(@q, :o_status, t("activerecord.attributes.o_solicitacao.status")) %></th>
          </tr>
        </thead>
        <tbody>
          <% @o_solicitacoes.each do |o_solicitacao| %>
            <tr>
              <td class="text-center">
                <div class="dropdown-toggle">
                  <a href="#" class="text-body dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="ph-gear"></i>
                  </a>
                  <div class="dropdown-menu" style="">
                    <div class="dropdown-header">Opções</div>
                    <%= link_to edit_o_solicitacao_path(o_solicitacao), class: "dropdown-item" do %>
                      <i class="ph-pen me-2"></i> Editar
                    <% end %>
                    <%= form_for o_solicitacao, method: :delete do |f| %>
                      <a class="dropdown-item hand-pointer " data-confirm-delete="<%= o_solicitacao_path(o_solicitacao) %>" data-csrf-token="<%= form_authenticity_token %>">
                        <i class="ph-trash-simple me-2"></i>Excluir
                      </a>
                    <% end %>
                    <td><%= o_solicitacao.numero %></td>
                    <td><%= o_solicitacao.solicitante.nome %></td>
                    <td><%= o_solicitacao.g_veiculo&.modelo %></td>
                    <td><%= o_solicitacao.g_centro_custo&.nome%></td>
                    <td><%= o_solicitacao.o_tipo_solicitacao&.descricao %></td>
                    <td><%= o_solicitacao.o_categoria_servico&.descricao %></td>
                    <td><%= o_solicitacao.o_status&.descricao %></td>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer">
    <%= pagy_bootstrap_nav(@pagy, link_extra: 'class="btn btn-outline-secondary btn-sm mx-1"').html_safe %>
  </div>
</div>
