<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar A Cargo</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @a_cargo %>">
          <p>
            <strong>Nome:</strong>
            <%= @a_cargo.nome %>
          </p>
          <p>
            <strong>Descricao:</strong>
            <%= @a_cargo.descricao %>
          </p>
          <p>
            <strong>Nivel:</strong>
            <%= @a_cargo.nivel %>
          </p>
          <p>
            <strong>A Status:</strong>
            <%= @a_cargo.a_status %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_a_cargo_path(@a_cargo), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", a_cargos_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @a_cargo, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
