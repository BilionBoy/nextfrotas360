<%= render "shared/context_nav", title: t("activerecord.models.#{OTipoSolicitacao.model_name.i18n_key}.other") do  %>
  <span class="breadcrumb-item"><%= link_to t("activerecord.models.#{OTipoSolicitacao.model_name.i18n_key}.other"), o_tipos_solicitacoes_path, class: "text-dark" %></span>
  <span class="breadcrumb-item active"><%= t("helpers.submit.#{params[:action]}") %></span>
<% end %>
<%= simple_form_for(@o_tipo_solicitacao, url: @o_tipo_solicitacao.new_record? ? o_tipos_solicitacoes_path : o_tipo_solicitacao_path(@o_tipo_solicitacao), method: @o_tipo_solicitacao.new_record? ? :post : :patch) do |f| %>
  <div class="card">
    <div class="card-header">
      <h5 class="my-0">
        <%= @o_tipo_solicitacao.new_record? ? "Incluir " : "Editar " %><%= t("activerecord.models.#{OTipoSolicitacao.model_name.i18n_key}.one") %>
      </h5>
    </div>
    <div class="card-body">
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="row">
        <div class="col-3">
          <%= f.input :descricao, input_html: { class: "capitalize"}, placeholder: "Descricao" %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= btn_submit(f) %>
      <%= link_to "Voltar", o_tipos_solicitacoes_path, class: "btn btn-light" %>
    </div>
  </div>
<% end %>
