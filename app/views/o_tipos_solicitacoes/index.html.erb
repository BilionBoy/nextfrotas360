<%= render "shared/context_nav", 
           title: t("activerecord.models.#{OTipoSolicitacao.model_name.i18n_key}.other"), 
           new_path: new_o_tipo_solicitacao_path do %>
  <span class="breadcrumb-item active">
    <%= t("activerecord.models.#{OTipoSolicitacao.model_name.i18n_key}.other") %>
  </span>
<% end %>
<div class="card">
  <div class="card-header d-flex">
    <%= search_form_for @q, url: o_tipos_solicitacoes_path, html: { class: "d-flex gap-2", autocomplete: "off" } do |f| %>
      <%= f.search_field :descricao_cont, class: "form-control", placeholder: "Pesquisar" %>
      <%= f.button(type: 'submit', class: 'btn btn-info') { tag.i(class: 'ph-magnifying-glass') } %>
      <%= link_to tag.i(class: 'ph-x-circle'), o_tipos_solicitacoes_path, class: "btn btn-light" if params[:q] %>
    <% end %>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-sm table-bordered table-striped">
        <thead>
          <tr>
            <th class="text-center">Ações</th>
            <th><%= sort_link(@q, :descricao, t("activerecord.attributes.o_tipo_solicitacao.descricao")) %></th>
          </tr>
        </thead>
        <tbody>
          <% @o_tipos_solicitacoes.each do |o_tipo| %>
            <tr>
              <td class="text-center">
                <div class="dropdown-toggle">
                  <a href="#" class="text-body dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="ph-gear"></i>
                  </a>
                  <div class="dropdown-menu">
                    <div class="dropdown-header">Opções</div>
                    <%= link_to edit_o_tipo_solicitacao_path(o_tipo), class: "dropdown-item" do %>
                      <i class="ph-pen me-2"></i> Editar
                    <% end %>
                    <%= button_to o_tipo_solicitacao_path(o_tipo), method: :delete, form: { data: { confirm: "Tem certeza que deseja excluir?" } }, class: "dropdown-item" do %>
                      <i class="ph-trash-simple me-2"></i> Excluir
                    <% end %>
                  </div>
                </div>
              </td>
              <td><%= o_tipo.descricao %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer">
    <%= pagy_bootstrap_nav(@pagy, link_extra: 'class="btn btn-outline-secondary btn-sm mx-1"').html_safe %>
  </div>
</div>
