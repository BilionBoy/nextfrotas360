<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar O Tipo Solicitacao</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @o_tipo_solicitacao %>">
          <p>
            <strong>Descricao:</strong>
            <%= @o_tipo_solicitacao.descricao %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_o_tipo_solicitacao_path(@o_tipo_solicitacao), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", o_tipos_solicitacoes_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @o_tipo_solicitacao, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
