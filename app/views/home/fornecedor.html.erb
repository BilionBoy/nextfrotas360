<style>
  .observatory-dashboard {
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    min-height: 100vh;
    padding: 0;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  }

  .quick-stat {
    text-align: center;
    background: rgba(255, 255, 255, 0.15);
    padding: 1rem 1.5rem;
    border-radius: 12px;
    backdrop-filter: blur(10px);
  }

  .stat-number {
    display: block;
    font-size: 2rem;
    font-weight: 700;
  }

  .stat-label {
    font-size: 0.9rem;
    opacity: 0.8;
  }

  /* Enhanced Metrics Grid */
  .metrics-observatory {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1.5fr;
    gap: 1.5rem;
    margin-bottom: 2rem;
    padding: 0 2rem;
  }

  .metric-card {
    background: white;
    border-radius: 16px;
    padding: 1.5rem;
    border: 1px solid #e5e7eb;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .metric-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #3b82f6, #10b981);
  }

  .metric-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
  }

  .primary-metric {
    background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
    color: white;
  }

  .primary-metric::before {
    background: rgba(255, 255, 255, 0.3);
  }

  .metric-header {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
  }

  .metric-icon-wrapper {
    flex-shrink: 0;
  }

  .metric-icon {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
  }

  .metric-icon svg {
    width: 24px;
    height: 24px;
  }

  .metric-icon.budget { background: linear-gradient(135deg, #10b981, #059669); }
  .metric-icon.vehicles-budgeted { background: linear-gradient(135deg, #f59e0b, #d97706); }
  .metric-icon.total-vehicles { background: linear-gradient(135deg, #8b5cf6, #7c3aed); }
  .metric-icon.requests { background: linear-gradient(135deg, #ef4444, #dc2626); }

  .primary-metric .metric-icon {
    background: rgba(255, 255, 255, 0.2);
    color: white;
  }

  .metric-content {
    flex: 1;
  }

  .metric-value {
    font-size: 2rem;
    font-weight: 800;
    color: #111827;
    margin-bottom: 0.25rem;
    line-height: 1;
  }

  .primary-metric .metric-value {
    color: white;
  }

  .metric-label {
    color: #6b7280;
    font-size: 0.9rem;
    font-weight: 500;
    margin-bottom: 0.75rem;
  }

  .primary-metric .metric-label {
    color: rgba(255, 255, 255, 0.9);
  }

  .metric-trend {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .trend-indicator {
    font-size: 1.2rem;
  }

  .trend-indicator.positive {
    color: #10b981;
  }

  .primary-metric .trend-indicator.positive {
    color: #86efac;
  }

  .trend-text {
    font-size: 0.8rem;
    color: #6b7280;
  }

  .primary-metric .trend-text {
    color: rgba(255, 255, 255, 0.8);
  }

  .metric-progress {
    margin-top: 0.75rem;
  }

  .progress-bar {
    height: 6px;
    background: #e5e7eb;
    border-radius: 3px;
    overflow: hidden;
    margin-bottom: 0.5rem;
  }

  .progress-fill {
    height: 100%;
    background: linear-gradient(90deg, #f59e0b, #d97706);
    border-radius: 3px;
    transition: width 1s ease;
  }

  .progress-text {
    font-size: 0.8rem;
    color: #6b7280;
    font-weight: 500;
  }

  .metric-status {
    margin-top: 0.75rem;
  }

  .status-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: #dcfdf7;
    color: #065f46;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .requests-card .metric-label-main {
    font-size: 1.1rem;
    font-weight: 600;
    color: #111827;
    margin-bottom: 1rem;
  }

  .requests-breakdown {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .request-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .request-indicator {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .request-indicator.status-0 { background: #3b82f6; }
  .request-indicator.status-1 { background: #10b981; }
  .request-indicator.status-2 { background: #f59e0b; }
  .request-indicator.status-3 { background: #ef4444; }

  .request-status {
    flex: 1;
    font-size: 0.9rem;
    color: #374151;
    font-weight: 500;
  }

  .request-count {
    font-weight: 700;
    color: #111827;
    background: #f3f4f6;
    padding: 0.25rem 0.5rem;
    border-radius: 6px;
    font-size: 0.8rem;
  }

  /* Enhanced Analytics Section */
  .analytics-observatory {
    padding: 0 2rem;
    margin-bottom: 2rem;
  }

  .analytics-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }

  .chart-panel {
    background: white;
    border-radius: 20px;
    border: 1px solid #e5e7eb;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .chart-panel:hover {
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
  }

  .panel-header {
    padding: 1.5rem 1.5rem 1rem;
    border-bottom: 1px solid #f3f4f6;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .panel-title {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .title-icon {
    font-size: 1.5rem;
    background: linear-gradient(135deg, #3b82f6, #1d4ed8);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .title-content h3 {
    font-size: 1.2rem;
    font-weight: 700;
    color: #111827;
    margin-bottom: 0.25rem;
  }

  .title-content p {
    font-size: 0.9rem;
    color: #6b7280;
    margin: 0;
  }

  .panel-controls {
    display: flex;
    gap: 0.5rem;
  }

  .control-btn {
    padding: 0.5rem 1rem;
    border: 1px solid #e5e7eb;
    background: white;
    border-radius: 8px;
    font-size: 0.8rem;
    font-weight: 500;
    color: #6b7280;
    cursor: pointer;
    transition: all 0.2s;
  }

  .control-btn.active {
    background: #3b82f6;
    color: white;
    border-color: #3b82f6;
  }

  .chart-container {
    height: 300px;
    padding: 1rem 1.5rem;
  }

  .chart-insights {
    padding: 1rem 1.5rem 1.5rem;
    background: #f8fafc;
    display: flex;
    justify-content: space-around;
  }

  .insight-item {
    text-align: center;
  }

  .insight-label {
    display: block;
    font-size: 0.8rem;
    color: #6b7280;
    margin-bottom: 0.25rem;
  }

  .insight-value {
    display: block;
    font-size: 1.1rem;
    font-weight: 700;
    color: #111827;
  }

  /* Observatory Footer */
  .observatory-footer {
    background: white;
    border-top: 1px solid #e5e7eb;
    padding: 1.5rem 2rem;
    margin: 2rem -2rem -1rem;
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer-info {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .update-time {
    font-size: 0.9rem;
    color: #6b7280;
  }

  .system-status {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    color: #374151;
    font-weight: 500;
  }

  .status-indicator {
    width: 8px;
    height: 8px;
    border-radius: 50%;
  }

  .status-indicator.online {
    background: #10b981;
    box-shadow: 0 0 0 2px rgba(16, 185, 129, 0.2);
  }

  .footer-actions {
    display: flex;
    gap: 1rem;
  }

  .action-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: #3b82f6;
    color: white;
    border: none;
    border-radius: 10px;
    font-size: 0.9rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
  }

  .action-btn:hover {
    background: #1d4ed8;
    transform: translateY(-1px);
  }

  .action-btn svg {
    width: 16px;
    height: 16px;
  }

  /* Responsive Design */
  @media (max-width: 1200px) {
    .metrics-observatory {
      grid-template-columns: 1fr 1fr;
      gap: 1rem;
    }
  }

  @media (max-width: 768px) {
    .dashboard-hero {
      flex-direction: column;
      text-align: center;
      gap: 1.5rem;
    }

    .hero-stats {
      justify-content: center;
    }

    .metrics-observatory {
      grid-template-columns: 1fr;
      padding: 0 1rem;
    }

    .analytics-observatory {
      padding: 0 1rem;
    }

    .analytics-grid {
      grid-template-columns: 1fr;
    }

    .observatory-footer {
      padding: 1rem;
    }

    .footer-content {
      flex-direction: column;
      gap: 1rem;
    }

    .footer-actions {
      justify-content: center;
    }
  }
</style>
<div class="observatory-dashboard">
  <!-- Métricas do Fornecedor -->
  <div class="metrics-observatory">
    <!-- Saldo Disponível -->
    <div class="metric-card primary-metric">
      <div class="metric-header">
        <div class="metric-icon-wrapper">
          <div class="metric-icon budget">
            <svg viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 ..."/>
            </svg>
          </div>
        </div>
        <div class="metric-content">
          <% if @fornecedor_financeiro %>
            <!-- Saldo Disponível -->
            <div class="metric-content">
              <h2 class="metric-value">R$ <%= number_to_currency(@fornecedor_financeiro&.saldo_disponivel || 0, unit: "", separator: ",") %></h2>
          <% else %>
              <h2 class="metric-value">R$ 0,00</h2>
            <% end %>
            <p class="metric-label">Saldo Disponível</p>
          </div>
        </div>
      </div>
      <!-- Total de Serviços Ativos -->
      <div class="metric-card">
        <div class="metric-header">
          <div class="metric-icon-wrapper">
            <div class="metric-icon vehicles-budgeted">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M18 2H6v20h12V2zm-2 14H8v-2h8v2zm0-4H8V8h8v4z"/>
              </svg>
            </div>
          </div>
          <div class="metric-content">
            <h2 class="metric-value"><%= @fornecedor_servicos.count %></h2>
            <p class="metric-label">Serviços Ativos</p>
          </div>
        </div>
      </div>
      <!-- Total de Movimentos -->
      <div class="metric-card">
        <div class="metric-header">
          <div class="metric-icon-wrapper">
            <div class="metric-icon total-vehicles">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M17 5H3v14h14V5z"/>
              </svg>
            </div>
          </div>
          <div class="metric-content">
            <h2 class="metric-value"><%= @fornecedor_movimentos.count %></h2>
            <p class="metric-label">Movimentos Financeiros</p>
          </div>
        </div>
      </div>
      <!-- Solicitações (ex.: ordens ou pedidos) -->
      <div class="metric-card requests-card">
        <div class="metric-header">
          <div class="metric-icon-wrapper">
            <div class="metric-icon requests">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M14 2H6v20h12V2z"/>
              </svg>
            </div>
          </div>
          <div class="metric-content">
            <h2 class="metric-label-main">Solicitações</h2>
            <div class="requests-breakdown">
              <div class="request-item">
                <div class="request-indicator status-0"></div>
                <span class="request-status">Aguardando</span>
                <span class="request-count">0</span>
              </div>
              <div class="request-item">
                <div class="request-indicator status-1"></div>
                <span class="request-status">Em andamento</span>
                <span class="request-count">0</span>
              </div>
              <div class="request-item">
                <div class="request-indicator status-2"></div>
                <span class="request-status">Concluídas</span>
                <span class="request-count">0</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Gráficos de Análise -->
    <div class="analytics-observatory">
      <div class="analytics-grid">
        <!-- Distribuição de Movimentos -->
        <div class="chart-panel">
          <div class="panel-header">
            <div class="panel-title">
              <div class="title-icon">💰</div>
              <div class="title-content">
                <h3>Movimentos Financeiros</h3>
                <p>Distribuição por tipo</p>
              </div>
            </div>
          </div>
          <div class="chart-container">
            <canvas id="movimentosChart"></canvas>
          </div>
        </div>
        <!-- Performance de Serviços -->
        <div class="chart-panel">
          <div class="panel-header">
            <div class="panel-title">
              <div class="title-icon">🛠️</div>
              <div class="title-content">
                <h3>Serviços Prestados</h3>
                <p>Quantidade por categoria</p>
              </div>
            </div>
          </div>
          <div class="chart-container">
            <canvas id="servicosChart"></canvas>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script>
    // Chart Movimentos
    new Chart(document.getElementById('movimentosChart'), {
      type: 'doughnut',
      data: {
        labels: <%= raw @tipos_movimentos.map(&:descricao).to_json %>,
        datasets: [{
          data: <%= raw @movimentos_por_tipo.map(&:count).to_json %>,
          backgroundColor: ['#f6c23e', '#36a2eb', '#1cc88a', '#e74a3b']
        }]
      },
      options: { responsive: true }
    });

    // Chart Serviços
    new Chart(document.getElementById('servicosChart'), {
      type: 'bar',
      data: {
        labels: <%= raw @categorias_servicos.map(&:descricao).to_json %>,
        datasets: [{
          label: "Serviços Ativos",
          data: <%= raw @servicos_por_categoria.map(&:count).to_json %>,
          backgroundColor: '#36a2eb'
        }]
      },
      options: { responsive: true }
    });
  </script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
