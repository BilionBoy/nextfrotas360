<%= render "shared/context_nav", title: t("activerecord.models.#{TTaxa.model_name.i18n_key}.other") do  %>
  <span class="breadcrumb-item"><%= link_to t("activerecord.models.#{TTaxa.model_name.i18n_key}.other"), t_taxas_path, class: "text-dark" %></span>
  <span class="breadcrumb-item active"><%= t("helpers.submit.#{params[:action]}") %></span>
<% end %>
<%= simple_form_for(@t_taxa) do |f| %>
  <div class="card">
    <div class="card-header">
      <h5 class="my-0">
        <%= @t_taxa.new_record? ? "Incluir " : "Editar " %><%= t("activerecord.models.#{TTaxa.model_name.i18n_key}.one") %>
      </h5>
    </div>
    <div class="card-body">
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="row">
        <div class="col-3">
          <%= f.input :nome, input_html: { class: "capitalize"}, placeholder: "Nome"  %>
        </div>
        <div class="col-3">
          <%= f.input :descricao, input_html: { class: "capitalize"}, placeholder: "Descricao"  %>
        </div>
        <div class="col-3">
          <%= f.input :percentual, input_html: { class: "capitalize"}, placeholder: "Percentual"  %>
        </div>
        <div class="col-3">
          <%= f.input :a_status_id, collection: AStatus.all, label_method: :descricao, value_method: :id, prompt: "Selecione o Status" %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= btn_submit(f) %>
      <%= link_to "Voltar", t_taxas_path, class: "btn btn-light" %>
    </div>
  </div>
<% end %>