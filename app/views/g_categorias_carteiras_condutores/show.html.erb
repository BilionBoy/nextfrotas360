<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar G Categoria Carteira Condutor</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @g_categoria_carteira_condutor %>">
          <p>
            <strong>Descricao:</strong>
            <%= @g_categoria_carteira_condutor.descricao %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_g_categoria_carteira_condutor_path(@g_categoria_carteira_condutor), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", g_categorias_carteiras_condutores_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @g_categoria_carteira_condutor, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
