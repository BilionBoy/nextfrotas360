<%= render "shared/context_nav", title: "Enviar Proposta" do %>
  <span class="breadcrumb-item active">Enviar Proposta</span>
<% end %>
<div class="card">
  <div class="card-header d-flex align-items-center gap-2">
    <%= search_form_for @q, html: { class: "d-flex gap-2", autocomplete: "off" } do |f| %>
      <%= f.search_field :numero_cont, class: "form-control", placeholder: "Pesquisar solicitação" %>
      <%= f.button(type: 'submit', class: 'btn btn-info') do %>
        <i class="ph-magnifying-glass"></i>
      <% end %>
      <% if params[:q].present? %>
        <%= link_to enviar_proposta_o_cotacoes_path, class: "btn btn-light" do %>
          <i class="ph-x-circle"></i>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-sm table-bordered table-striped">
        <thead>
          <tr>
            <th class="text-center">Ações</th>
            <th>Número</th>
            <th>Solicitante</th>
            <th>Veículo</th>
            <th>Centro de Custo</th>
            <th>Tipo</th>
            <th>Categoria</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% @o_solicitacoes.each do |solicitacao| %>
            <tr>
              <td class="text-center">
                <%= link_to "Enviar Proposta", new_o_proposta_path(o_cotacao_id: solicitacao.id),
                            class: "btn btn-sm btn-success" %>
              </td>
              <td><%= solicitacao.numero %></td>
              <td><%= solicitacao.solicitante&.nome %></td>
              <td><%= solicitacao.g_veiculo&.modelo %></td>
              <td><%= solicitacao.g_centro_custo&.nome %></td>
              <td><%= solicitacao.o_tipo_solicitacao&.descricao %></td>
              <td><%= solicitacao.o_categoria_servico&.descricao %></td>
              <td><%= solicitacao.o_status&.descricao %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer">
    <%= pagy_bootstrap_nav(@pagy, link_extra: 'class="btn btn-outline-secondary btn-sm mx-1"').html_safe %>
  </div>
</div>
