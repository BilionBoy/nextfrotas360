<%= render "shared/context_nav", title: t("activerecord.models.#{OCotacao.model_name.i18n_key}.other"), new_path: new_o_cotacao_path do  %>
  <span class="breadcrumb-item active"><%= t("activerecord.models.#{OCotacao.model_name.i18n_key}.other") %></span>
<% end %>
<div class="card">
  <div class="card-header d-flex">
    <%= search_form_for @q, html: { class: "d-flex gap-2" , autocomplete: "off"} do |f| %>
      <%= f.search_field :o_solicitacao_numero_cont, class: "form-control", placeholder: "Pesquisar" %>
      <%= f.button(type: 'submit', class: 'btn btn-info') { tag.i(class: 'ph-magnifying-glass') } %>
      <%= link_to  tag.i(class: 'ph-x-circle'), o_cotacoes_path, class: "btn btn-light" if params[:q] %>
    <% end %>
  </div>
  <div class="card-body">
    <div class= "table-responsive">
      <table class="table table-sm table-bordered table-striped">
        <thead>
          <tr>
            <th class="text-center">Ações</th>
            <th><%= sort_link(@q, :o_solicitacao, t("activerecord.attributes.o_cotacao.solicitacao")) %></th>
            <th><%= sort_link(@q, :o_visibilidade, t("activerecord.attributes.o_cotacao.visibilidade")) %></th>
            <th><%= sort_link(@q, :o_status, t("activerecord.attributes.o_cotacao.status")) %></th>
            <th><%= sort_link(@q, :data_expiracao, t("activerecord.attributes.o_cotacao.data_expiracao")) %></th>
          </tr>
        </thead>
        <tbody>
          <% @o_cotacoes.each do |o_cotacao| %>
            <tr>
              <td class="text-center">
                <div class="dropdown-toggle">
                  <a href="#" class="text-body dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="ph-gear"></i>
                  </a>
                  <div class="dropdown-menu" style="">
                    <div class="dropdown-header">Opções</div>
                    <%= link_to edit_o_cotacao_path(o_cotacao), class: "dropdown-item" do %>
                      <i class="ph-pen me-2"></i> Editar
                    <% end %>
                    <%= form_for o_cotacao, method: :delete do |f| %>
                      <a class="dropdown-item hand-pointer " data-confirm-delete="<%= o_cotacao_path(o_cotacao) %>" data-csrf-token="<%= form_authenticity_token %>">
                        <i class="ph-trash-simple me-2"></i>Excluir
                      </a>
                    <% end %>
                    <td><%= o_cotacao.o_solicitacao&.descricao %></td>
                    <td><%= o_cotacao.o_visibilidade&.descricao%></td>
                    <td><%= o_cotacao.o_status&.descricao %></td>
                    <td><%= o_cotacao.data_expiracao %></td>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer">
    <%= pagy_bootstrap_nav(@pagy, link_extra: 'class="btn btn-outline-secondary btn-sm mx-1"').html_safe %>
  </div>
</div>
