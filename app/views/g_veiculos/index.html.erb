<%= render "shared/context_nav", title: t("activerecord.models.#{GVeiculo.model_name.i18n_key}.other"), new_path: new_g_veiculo_path do  %>
  <span class="breadcrumb-item active"><%= t("activerecord.models.#{GVeiculo.model_name.i18n_key}.other") %></span>
<% end %>
<div class="card">
  <div class="card-header d-flex">
    <%= search_form_for @q, html: { class: "d-flex gap-2", autocomplete: "off"} do |f| %>
      <%= f.search_field :placa_or_chassi_cont, class: "form-control", placeholder: "Pesquisar" %>
      <%= f.button(type: 'submit', class: 'btn btn-info') { tag.i(class: 'ph-magnifying-glass') } %>
      <%= link_to tag.i(class: 'ph-x-circle'), g_veiculos_path, class: "btn btn-light" if params[:q] %>
    <% end %>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-sm table-bordered table-striped">
        <thead>
          <tr>
            <th class="text-center">Ações</th>
            <th><%= sort_link(@q, :placa, t("activerecord.attributes.g_veiculo.placa_or_chassi")) %></th>
            <th><%= sort_link(@q, :modelo, t("activerecord.attributes.g_veiculo.modelo")) %></th>
            <th><%= sort_link(@q, :ano, t("activerecord.attributes.g_veiculo.ano")) %></th>
            <th><%= sort_link(@q, :km_or_horimetro, t("activerecord.attributes.g_veiculo.km_ou_horimetro")) %></th>
            <th><%= sort_link(@q, :a_status, t("activerecord.attributes.g_veiculo.a_status")) %></th>
            <th><%= sort_link(@q, :g_tipo_veiculo, t("activerecord.attributes.g_veiculo.tipo_veiculo")) %></th>
            <th><%= sort_link(@q, :a_unidade, t("activerecord.attributes.g_veiculo.unidade")) %></th>
            <th><%= sort_link(@q, :g_centro_custo, t("activerecord.attributes.g_veiculo.centro_custo")) %></th>
          </tr>
        </thead>
        <tbody>
          <% @g_veiculos.each do |g_veiculo| %>
            <tr>
              <td class="text-center">
                <div class="dropdown-toggle">
                  <a href="#" class="text-body dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="ph-gear"></i>
                  </a>
                  <div class="dropdown-menu">
                    <div class="dropdown-header">Opções</div>
                    <%= link_to edit_g_veiculo_path(g_veiculo), class: "dropdown-item" do %>
                      <i class="ph-pen me-2"></i> Editar
                    <% end %>
                    <%= form_for g_veiculo, method: :delete do |f| %>
                      <a class="dropdown-item hand-pointer"
                         data-confirm-delete="<%= g_veiculo_path(g_veiculo) %>"
                         data-csrf-token="<%= form_authenticity_token %>">
                        <i class="ph-trash-simple me-2"></i>Excluir
                      </a>
                    <% end %>
                  </div>
                </div>
              </td>
              <td><%= g_veiculo.tipo_maquina? ? g_veiculo.chassi : g_veiculo.placa || "-" %></td>
              <td><%= g_veiculo.modelo || "-" %></td>
              <td><%= g_veiculo.ano || "-" %></td>
              <td><%= g_veiculo.tipo_maquina? ? g_veiculo.horimetro : g_veiculo.km_atual %></td>
              <td><%= g_veiculo.a_status&.descricao || "-" %></td>
              <td><%= g_veiculo.g_tipo_veiculo&.descricao || "-" %></td>
              <td><%= g_veiculo.a_unidade&.nome_fantasia || "-" %></td>
              <td><%= g_veiculo.g_centro_custo&.nome || "-" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer">
    <%= pagy_bootstrap_nav(@pagy, link_extra: 'class="btn btn-outline-secondary btn-sm mx-1"').html_safe %>
  </div>
</div>
