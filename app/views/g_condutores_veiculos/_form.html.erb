<%= render "shared/context_nav", title: t("activerecord.models.#{GCondutorVeiculo.model_name.i18n_key}.other") do  %>
  <span class="breadcrumb-item"><%= link_to t("activerecord.models.#{GCondutorVeiculo.model_name.i18n_key}.other"), g_condutores_veiculos_path, class: "text-dark" %></span>
  <span class="breadcrumb-item active"><%= t("helpers.submit.#{params[:action]}") %></span>
<% end %>
<%= simple_form_for(@g_condutor_veiculo) do |f| %>
  <div class="card">
    <div class="card-header">
      <h5 class="my-0">
        <%= @g_condutor_veiculo.new_record? ? "Incluir " : "Editar " %><%= t("activerecord.models.#{GCondutorVeiculo.model_name.i18n_key}.one") %>
      </h5>
    </div>
    <div class="card-body">
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="row">
        <div class="col-3">
          <%= f.input :g_condutor_id, collection: GCondutor.all, label_method: :nome, value_method: :id, prompt: "Selecione o Condutor" %>
        </div>
        <div class="col-3">
          <%= f.input :g_veiculo_id, collection: GVeiculo.all, label_method: :placa, value_method: :id, prompt: "Selecione o Veiculo" %>
        </div>
        <div class="col-3">
          <%= f.input :data_inicio, input_html: { class: "capitalize"}, placeholder: "Data inicio"  %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= btn_submit(f) %>
      <%= link_to "Voltar", g_condutores_veiculos_path, class: "btn btn-light" %>
    </div>
  </div>
<% end %>