<%= render "shared/context_nav", title: t("activerecord.models.#{ONotaFiscal.model_name.i18n_key}.other"), new_path: new_o_nota_fiscal_path do  %>
  <span class="breadcrumb-item active"><%= t("activerecord.models.#{ONotaFiscal.model_name.i18n_key}.other") %></span>
<% end %>
<div class="card">
  <div class="card-header d-flex">
    <%= search_form_for @q, html: { class: "d-flex gap-2" , autocomplete: "off"} do |f| %>
      <%= f.search_field :o_ordem_servico_numero_os_cont, class: "form-control", placeholder: "Pesquisar" %>
      <%= f.button(type: 'submit', class: 'btn btn-info') { tag.i(class: 'ph-magnifying-glass') } %>
      <%= link_to  tag.i(class: 'ph-x-circle'), o_notas_fiscais_path, class: "btn btn-light" if params[:q] %>
    <% end %>
  </div>
  <div class="card-body">
    <div class= "table-responsive">
      <table class="table table-sm table-bordered table-striped">
        <thead>
          <tr>
            <th class="text-center">Ações</th>
            <th><%= sort_link(@q, :o_ordem_servico, t("activerecord.attributes.o_nota_fiscal.ordem_servico")) %></th>
            <th><%= sort_link(@q, :numero, t("activerecord.attributes.o_nota_fiscal.numero")) %></th>
            <th><%= sort_link(@q, :data_emissao, t("activerecord.attributes.o_nota_fiscal.data_emissao")) %></th>
            <th><%= sort_link(@q, :valor_total, t("activerecord.attributes.o_nota_fiscal.valor_total")) %></th>
            <th><%= sort_link(@q, :o_status_nf, t("activerecord.attributes.o_nota_fiscal.status_nf")) %></th>
          </tr>
        </thead>
        <tbody>
          <% @o_notas_fiscais.each do |o_nota_fiscal| %>
            <tr>
              <td class="text-center">
                <div class="dropdown-toggle">
                  <a href="#" class="text-body dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="ph-gear"></i>
                  </a>
                  <div class="dropdown-menu" style="">
                    <div class="dropdown-header">Opções</div>
                    <%= link_to edit_o_nota_fiscal_path(o_nota_fiscal), class: "dropdown-item" do %>
                      <i class="ph-pen me-2"></i> Editar
                    <% end %>
                    <%= form_for o_nota_fiscal, method: :delete do |f| %>
                      <a class="dropdown-item hand-pointer " data-confirm-delete="<%= o_nota_fiscal_path(o_nota_fiscal) %>" data-csrf-token="<%= form_authenticity_token %>">
                        <i class="ph-trash-simple me-2"></i>Excluir
                      </a>
                    <% end %>
                    <td><%= o_nota_fiscal.o_ordem_servico&.numero %></td>
                    <td><%= o_nota_fiscal.numero %></td>
                    <td><%= o_nota_fiscal.data_emissao %></td>
                    <td><%= o_nota_fiscal.valor_total %></td>
                    <td><%= o_nota_fiscal.o_status_nf&.descricao%></td>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer">
    <%= pagy_bootstrap_nav(@pagy, link_extra: 'class="btn btn-outline-secondary btn-sm mx-1"').html_safe %>
  </div>
</div>
