<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar O Nota Fiscal</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @o_nota_fiscal %>">
          <p>
            <strong>O Ordem Servico:</strong>
            <%= @o_nota_fiscal.o_ordem_servico %>
          </p>
          <p>
            <strong>Numero:</strong>
            <%= @o_nota_fiscal.numero %>
          </p>
          <p>
            <strong>Data Emissao:</strong>
            <%= @o_nota_fiscal.data_emissao %>
          </p>
          <p>
            <strong>Valor Total:</strong>
            <%= @o_nota_fiscal.valor_total %>
          </p>
          <p>
            <strong>O Status Nf:</strong>
            <%= @o_nota_fiscal.o_status_nf %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_o_nota_fiscal_path(@o_nota_fiscal), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", o_notas_fiscais_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @o_nota_fiscal, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
