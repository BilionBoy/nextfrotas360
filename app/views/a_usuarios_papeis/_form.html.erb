<%= render "shared/context_nav", title: t("activerecord.models.#{AUsuarioPapel.model_name.i18n_key}.other") do  %>
  <span class="breadcrumb-item"><%= link_to t("activerecord.models.#{AUsuarioPapel.model_name.i18n_key}.other"), a_usuarios_papeis_path, class: "text-dark" %></span>
  <span class="breadcrumb-item active"><%= t("helpers.submit.#{params[:action]}") %></span>
<% end %>
<%= simple_form_for(@a_usuario_papel) do |f| %>
  <div class="card">
    <div class="card-header">
      <h5 class="my-0">
        <%= @a_usuario_papel.new_record? ? "Incluir " : "Editar " %><%= t("activerecord.models.#{AUsuarioPapel.model_name.i18n_key}.one") %>
      </h5>
    </div>
    <div class="card-body">
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="row">
        <div class="col-3">
          <%= f.input :user_id, collection: User.all, label_method: :nome, value_method: :id, prompt: "Selecione o UsuÃ¡rio" %>
        </div>
        <div class="col-3">
          <%= f.input :a_papel_id, collection: APapel.all, label_method: :nome, value_method: :id, prompt: "Selecione o Papel" %>
        </div>
        <div class="col-3">
          <%= f.input :a_unidade_id, collection: AUnidade.all, label_method: :nome_fantasia, value_method: :id, prompt: "Selecione a Unidade" %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= btn_submit(f) %>
      <%= link_to "Voltar", a_usuarios_papeis_path, class: "btn btn-light" %>
    </div>
  </div>
<% end %>