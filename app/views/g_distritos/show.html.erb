<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar G Distrito</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @g_distrito %>">
          <p>
            <strong>Descricao:</strong>
            <%= @g_distrito.descricao %>
          </p>
          <p>
            <strong>Codigo Ibge:</strong>
            <%= @g_distrito.codigo_ibge %>
          </p>
          <p>
            <strong>G Municipio:</strong>
            <%= @g_distrito.g_municipio %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_g_distrito_path(@g_distrito), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", g_distritos_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @g_distrito, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
