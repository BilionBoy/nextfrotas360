<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar A Papel Permissao</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @a_papel_permissao %>">
          <p>
            <strong>A Papel:</strong>
            <%= @a_papel_permissao.a_papel %>
          </p>
          <p>
            <strong>A Permissao:</strong>
            <%= @a_papel_permissao.a_permissao %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_a_papel_permissao_path(@a_papel_permissao), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", a_papeis_permissoes_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @a_papel_permissao, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
