<%= render "shared/context_nav", title: t("activerecord.models.#{APapelPermissao.model_name.i18n_key}.other") do  %>
  <span class="breadcrumb-item"><%= link_to t("activerecord.models.#{APapelPermissao.model_name.i18n_key}.other"), a_papeis_permissoes_path, class: "text-dark" %></span>
  <span class="breadcrumb-item active"><%= t("helpers.submit.#{params[:action]}") %></span>
<% end %>
<%= simple_form_for(@a_papel_permissao) do |f| %>
  <div class="card">
    <div class="card-header">
      <h5 class="my-0">
        <%= @a_papel_permissao.new_record? ? "Incluir " : "Editar " %><%= t("activerecord.models.#{APapelPermissao.model_name.i18n_key}.one") %>
      </h5>
    </div>
    <div class="card-body">
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="row">
        <div class="col-6">
          <%= f.input :a_papel_id, collection: APapel.all, label_method: :descricao, value_method: :id, prompt: "Selecione o Papel" %>
        </div>
        <div class="col-6">
          <%= f.input :a_permissao_id, collection: APermissao.all, label_method: :descricao, value_method: :id, prompt: "Selecione a PermissÃ£o" %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= btn_submit(f) %>
      <%= link_to "Voltar", a_papeis_permissoes_path, class: "btn btn-light" %>
    </div>
  </div>
<% end %>