<style>
  body {
    background: black;

  .btn-secondary {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1.25rem;
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 8px;
  color: #ffffff;
  font-size: 0.9375rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s;
  backdrop-filter: blur(10px);
  min-height: 44px;
  }

  .btn-secondary:hover {
  background: rgba(255, 255, 255, 0.15);
  border-color: rgba(255, 255, 255, 0.3);
  transform: translateY(-1px);
  }

  .btn-primary {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  padding: 0.875rem 1.5rem;
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  border: none;
  border-radius: 8px;
  color: #ffffff;
  font-size: 0.9375rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s;
  min-height: 44px;
  box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
  }

  .btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
  }

  .btn-primary:active {
  transform: translateY(0);
  }
  }
</style>
<div class="report-container">
  <!-- Header Section -->
  <div class="report-header">
    <div class="header-content">
      <div>
        <h1 class="report-title">Ordens de Serviço</h1>
        <p class="report-subtitle">Gestão completa de manutenções da frota</p>
      </div>
      <div class="header-actions">
        <button class="btn-secondary" onclick="window.print()">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="6 9 6 2 18 2 18 9"></polyline>
            <path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"></path>
            <rect x="6" y="14" width="12" height="8"></rect>
          </svg>
          Imprimir
        </button>
        <button class="btn-secondary">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
            <polyline points="7 10 12 15 17 10"></polyline>
            <line x1="12" y1="15" x2="12" y2="3"></line>
          </svg>
          Exportar
        </button>
      </div>
    </div>
  </div>
  <!-- Filtros -->
  <div class="filters-card">
    <%= search_form_for @q, url: o_ordem_servicos_path, method: :get, html: { class: "filters-form" } do |f| %>
      <!-- Status -->
      <div class="filter-group flex flex-col">
        <label class="filter-label mb-1 text-sm font-medium text-gray-700">Status</label>
        <%= f.select :o_status_id_eq, 
          options_from_collection_for_select(OStatus.all, :id, :descricao, params.dig(:q, :o_status_id_eq)), 
          { include_blank: "Todos os Status" },
          class: "filter-select block w-48 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <button type="submit" class="btn-primary">Filtrar Resultados</button>
    <% end %>
  </div>
  <% 
    # Métricas dinâmicas com base no resultado filtrado
    total_ordens = @o_ordem_servicos.size
    status_counts = @o_ordem_servicos.group_by { |os| os.o_status&.descricao || "Sem Status" }.transform_values(&:count)
    abertas = status_counts["Aberta"] || 0
    em_andamento = status_counts["Em Andamento"] || 0
    concluidas = status_counts["Concluída"] || 0
  %>
  <!-- Métricas -->
  <div class="metrics-grid">
    <div class="metric-card">
      <div class="metric-icon" style="background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
          <line x1="9" y1="9" x2="15" y2="9"></line>
          <line x1="9" y1="15" x2="15" y2="15"></line>
        </svg>
      </div>
      <div class="metric-content">
        <div class="metric-label">Total de Ordens</div>
        <div class="metric-value"><%= total_ordens %></div>
      </div>
    </div>
    <div class="metric-card">
      <div class="metric-icon" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
          <polyline points="22 4 12 14.01 9 11.01"></polyline>
        </svg>
      </div>
      <div class="metric-content">
        <div class="metric-label">Abertas</div>
        <div class="metric-value"><%= abertas %></div>
      </div>
    </div>
    <div class="metric-card">
      <div class="metric-icon" style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"></circle>
          <polyline points="12 6 12 12 16 14"></polyline>
        </svg>
      </div>
      <div class="metric-content">
        <div class="metric-label">Em Andamento</div>
        <div class="metric-value"><%= em_andamento %></div>
      </div>
    </div>
    <div class="metric-card">
      <div class="metric-icon" style="background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
          <polyline points="14 2 14 8 20 8"></polyline>
          <line x1="16" y1="13" x2="8" y2="13"></line>
          <line x1="16" y1="17" x2="8" y2="17"></line>
        </svg>
      </div>
      <div class="metric-content">
        <div class="metric-label">Concluídas</div>
        <div class="metric-value"><%= concluidas %></div>
      </div>
    </div>
  </div>
  <!-- Cards de Ordens -->
  <div class="orders-grid">
    <% @o_ordem_servicos.each_with_index do |os, index| %>
      <% 
        status_descricao = os.o_status&.descricao || os.o_proposta&.o_status&.descricao || "Sem Status"

        status_class = case status_descricao.downcase
          when /aberta/ then "status-open"
          when /andamento/ then "status-progress"
          when /conclu/ then "status-completed"
          when /cancelada/ then "status-cancelled"
          else "status-default"
        end

        total_days = (os.data_termino_prevista - os.data_inicio_prevista).to_i rescue 0
        elapsed_days = (Date.today - os.data_inicio_prevista).to_i rescue 0
        progress = total_days > 0 ? [[elapsed_days.to_f / total_days * 100, 0].max, 100].min.round : 0
      %>
      <div class="order-card">
        <div class="card-header">
          <div class="card-title">
            <%= os.o_proposta.o_cotacao.o_solicitacao.descricao.presence || "Solicitação ##{os.o_proposta.o_cotacao.o_solicitacao.numero}" %>
          </div>
          <div class="<%= status_class %>">
            <span class="status-dot"></span>
            <%= status_descricao %>
          </div>
        </div>
        <div class="vehicle-section">
          <div class="vehicle-info">
            <div class="vehicle-plate"><%= os.g_veiculo&.placa || "-" %></div>
            <div class="vehicle-label">Veículo</div>
          </div>
        </div>
        <div class="service-details">
          <div class="detail-row">
            <div class="detail-label">Proposta</div>
            <div class="detail-value"><%= os.o_proposta&.o_cotacao&.descricao_completa || "-" %></div>
          </div>
          <div class="detail-row">
            <div class="detail-label">Fornecedor</div>
            <div class="detail-value"><%= os.f_empresa_fornecedora&.nome_fantasia || "-" %></div>
          </div>
          <div class="detail-row">
            <div class="detail-label">Início</div>
            <div class="detail-value"><%= os.data_inicio_prevista&.strftime("%d/%m/%Y") || "-" %></div>
          </div>
          <div class="detail-row">
            <div class="detail-label">Término</div>
            <div class="detail-value"><%= os.data_termino_prevista&.strftime("%d/%m/%Y") || "-" %></div>
          </div>
        </div>
        <% if progress > 0 %>
          <div class="progress-section">
            <div class="progress-header">
              <span class="progress-label">Progresso</span>
              <span class="progress-percentage"><%= progress %>%</span>
            </div>
            <div class="progress-bar">
              <div class="progress-fill" style="width: <%= progress %>%"></div>
            </div>
          </div>
        <% end %>
        <div class="card-footer">
          <%= link_to o_ordem_servico_path(os), class: "btn-detail" do %>
            Ver Detalhes
          <% end %>
          <% if os.o_proposta %>
            <% case os.o_proposta.o_status&.descricao %>
            <% when "Aprovada" %>
              <% if current_user.fornecedor? %>
                <%= button_to "Finalizar OS",
                  finalizar_o_ordem_servico_path(os),
                  method: :patch,
                  data: { turbo: false, confirm: "Confirmar finalização da OS?" },
                  class: "btn btn-sm btn-primary" %>
              <% end %>
            <% when "Rejeitada" %>
              <span class="text-red-600 font-semibold">Proposta Rejeitada</span>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <!-- Empty State -->
  <% if @o_ordem_servicos.empty? %>
    <div class="empty-state">
      <h3 class="empty-title">Nenhuma ordem de serviço encontrada</h3>
      <p class="empty-description">Tente ajustar os filtros ou criar uma nova OS</p>
    </div>
  <% end %>
  <!-- Paginação -->
  <% if defined?(@pagy) && @pagy %>
    <div class="pagination-container">
      <%= pagy_bootstrap_nav(@pagy).html_safe %>
    </div>
  <% end %>
</div>
