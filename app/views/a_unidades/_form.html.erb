<%= render "shared/context_nav", title: t("activerecord.models.#{AUnidade.model_name.i18n_key}.other") do  %>
  <span class="breadcrumb-item"><%= link_to t("activerecord.models.#{AUnidade.model_name.i18n_key}.other"), a_unidades_path, class: "text-dark" %></span>
  <span class="breadcrumb-item active"><%= t("helpers.submit.#{params[:action]}") %></span>
<% end %>
<%= simple_form_for(@a_unidade) do |f| %>
  <div class="card">
    <div class="card-header">
      <h5 class="my-0">
        <%= @a_unidade.new_record? ? "Incluir " : "Editar " %><%= t("activerecord.models.#{AUnidade.model_name.i18n_key}.one") %>
      </h5>
    </div>
    <div class="card-body">
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="row">
        <div class="col-3">
          <%= f.input :nome_fantasia, input_html: { class: "capitalize"}, placeholder: "Nome fantasia"  %>
        </div>
        <div class="col-3">
          <%= f.input :a_tipo_unidade_id, collection: ATipoUnidade.all, label_method: :descricao, value_method: :id, prompt: "Selecione a Unidade" %>
        </div>
        <div class="col-3">
          <%= f.input :cnpj, input_html: { class: "capitalize"}, placeholder: "Cnpj"  %>
        </div>
        <div class="col-3">
          <%= f.input :endereco, input_html: { class: "capitalize"}, placeholder: "Endereco"  %>
        </div>
        <div class="col-3">
          <%= f.input :telefone, input_html: { class: "capitalize"}, placeholder: "Telefone"  %>
        </div>
        <div class="col-3">
          <%= f.input :a_status_id, collection: AStatus.all, label_method: :descricao, value_method: :id, prompt: "Selecione o Status" %>
        </div>
        <div class="col-3">
          <%= f.input :codigo_interno, input_html: { class: "capitalize"}, placeholder: "Codigo interno"  %>
        </div>
        <div class="col-3">
          <%= f.input :g_municipio_id, collection: GMunicipio.all, label_method: :descricao, value_method: :id, prompt: "Selecione a Unidade" %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= btn_submit(f) %>
      <%= link_to "Voltar", a_unidades_path, class: "btn btn-light" %>
    </div>
  </div>
<% end %>