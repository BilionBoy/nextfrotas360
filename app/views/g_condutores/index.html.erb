<%= render "shared/context_nav", title: t("activerecord.models.#{GCondutor.model_name.i18n_key}.other"), new_path: new_g_condutor_path do  %>
  <span class="breadcrumb-item active"><%= t("activerecord.models.#{GCondutor.model_name.i18n_key}.other") %></span>
<% end %>
<div class="card">
  <div class="card-header d-flex">
    <%= search_form_for @q, html: { class: "d-flex gap-2" , autocomplete: "off"} do |f| %>
      <%= f.search_field :nome_cont, class: "form-control", placeholder: "Pesquisar" %>
      <%= f.button(type: 'submit', class: 'btn btn-info') { tag.i(class: 'ph-magnifying-glass') } %>
      <%= link_to  tag.i(class: 'ph-x-circle'), g_condutores_path, class: "btn btn-light" if params[:q] %>
    <% end %>
  </div>
  <div class="card-body">
    <div class= "table-responsive">
      <table class="table table-sm table-bordered table-striped">
        <thead>
          <tr>
            <th class="text-center">Ações</th>
            <th><%= sort_link(@q, :nome, t("activerecord.attributes.g_condutor.nome")) %></th>
            <th><%= sort_link(@q, :telefone, t("activerecord.attributes.g_condutor.telefone")) %></th>
            <th><%= sort_link(@q, :cnh_numero, t("activerecord.attributes.g_condutor.cnh_numero")) %></th>
            <th><%= sort_link(@q, :g_categoria_carteira_condutor, t("activerecord.attributes.g_condutor.categoria_carteira_condutor")) %></th>
            <th><%= sort_link(@q, :validade_cnh, t("activerecord.attributes.g_condutor.validade_cnh")) %></th>
            <th><%= sort_link(@q, :g_status, t("activerecord.attributes.g_condutor.status")) %></th>
            <th><%= sort_link(@q, :g_carteira_orgao_emissor, t("activerecord.attributes.g_condutor.carteira_orgao_emissor")) %></th>
          </tr>
        </thead>
        <tbody>
          <% @g_condutores.each do |g_condutor| %>
            <tr>
              <td class="text-center">
                <div class="dropdown-toggle">
                  <a href="#" class="text-body dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="ph-gear"></i>
                  </a>
                  <div class="dropdown-menu" style="">
                    <div class="dropdown-header">Opções</div>
                    <%= link_to edit_g_condutor_path(g_condutor), class: "dropdown-item" do %>
                      <i class="ph-pen me-2"></i> Editar
                    <% end %>
                    <%= form_for g_condutor, method: :delete do |f| %>
                      <a class="dropdown-item hand-pointer " data-confirm-delete="<%= g_condutor_path(g_condutor) %>" data-csrf-token="<%= form_authenticity_token %>">
                        <i class="ph-trash-simple me-2"></i>Excluir
                      </a>
                    <% end %>
                    <td><%= g_condutor.nome %></td>
                    <td><%= g_condutor.telefone %></td>
                    <td><%= g_condutor.cnh_numero %></td>
                    <td><%= g_condutor.validade_cnh %></td>
                    <td><%= g_condutor.g_categoria_carteira_condutor&.descricao %></td>
                    <td><%= g_condutor.g_status&.descricao %></td>
                    <td><%= g_condutor.g_carteira_orgao_emissor&.descricao %></td>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer">
    <%= pagy_bootstrap_nav(@pagy, link_extra: 'class="btn btn-outline-secondary btn-sm mx-1"').html_safe %>
  </div>
</div>
