<%= render "shared/context_nav", title: t("activerecord.models.#{GCondutor.model_name.i18n_key}.other") do  %>
  <span class="breadcrumb-item"><%= link_to t("activerecord.models.#{GCondutor.model_name.i18n_key}.other"), g_condutores_path, class: "text-dark" %></span>
  <span class="breadcrumb-item active"><%= t("helpers.submit.#{params[:action]}") %></span>
<% end %>
<%= simple_form_for(@g_condutor) do |f| %>
  <div class="card">
    <div class="card-header">
      <h5 class="my-0">
        <%= @g_condutor.new_record? ? "Incluir " : "Editar " %><%= t("activerecord.models.#{GCondutor.model_name.i18n_key}.one") %>
      </h5>
    </div>
    <div class="card-body">
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="row">
        <div class="col-3">
          <%= f.input :nome, input_html: { class: "capitalize"}, placeholder: "Nome"  %>
        </div>
        <div class="col-3">
          <%= f.input :email, input_html: { class: "capitalize"}, placeholder: "Email"  %>
        </div>
        <div class="col-3">
          <%= f.input :telefone, input_html: { class: "capitalize"}, placeholder: "Telefone"  %>
        </div>
        <div class="col-3">
          <%= f.input :cnh_numero, input_html: { class: "capitalize"}, placeholder: "Cnh numero"  %>
        </div>
        <div class="col-6">
          <%= f.input :validade_cnh, input_html: { class: "capitalize"}, placeholder: "Validade cnh"  %>
        </div>
        <div class="col-6">
          <%= f.input :g_categoria_carteira_condutor_id, collection: GCategoriaCarteiraCondutor.all, label_method: :descricao, value_method: :id, prompt: "Selecione a Categoria da CNH" %>
        </div>
        <div class="col-6">
          <%= f.input :g_status_id, collection: GStatus.all, label_method: :descricao, value_method: :id, prompt: "Selecione o Status" %>
        </div>
        <div class="col-6">
          <%= f.input :g_carteira_orgao_emissor_id, collection: GCarteiraOrgaoEmissor.all, label_method: :descricao, value_method: :id, prompt: "Selecione o órgão Emissor da Carteira" %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= btn_submit(f) %>
      <%= link_to "Voltar", g_condutores_path, class: "btn btn-light" %>
    </div>
  </div>
<% end %>