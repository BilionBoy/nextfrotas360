<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar A Usuario Historico Cargo Unidade</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @a_usuario_historico_cargo_unidade %>">
          <p>
            <strong>User:</strong>
            <%= @a_usuario_historico_cargo_unidade.user %>
          </p>
          <p>
            <strong>A Cargo:</strong>
            <%= @a_usuario_historico_cargo_unidade.a_cargo %>
          </p>
          <p>
            <strong>A Unidade:</strong>
            <%= @a_usuario_historico_cargo_unidade.a_unidade %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_a_usuario_historico_cargo_unidade_path(@a_usuario_historico_cargo_unidade), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", a_usuarios_historicos_cargos_unidades_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @a_usuario_historico_cargo_unidade, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
