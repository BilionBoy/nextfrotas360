<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar A Tipo Unidade</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @a_tipo_unidade %>">
          <p>
            <strong>Descricao:</strong>
            <%= @a_tipo_unidade.descricao %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_a_tipo_unidade_path(@a_tipo_unidade), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", a_tipos_unidades_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @a_tipo_unidade, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
