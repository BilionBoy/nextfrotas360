<%= render "shared/context_nav", title: t("activerecord.models.#{FEmpresaFornecedora.model_name.i18n_key}.other") do  %>
  <span class="breadcrumb-item"><%= link_to t("activerecord.models.#{FEmpresaFornecedora.model_name.i18n_key}.other"), f_empresas_fornecedoras_path, class: "text-dark" %></span>
  <span class="breadcrumb-item active"><%= t("helpers.submit.#{params[:action]}") %></span>
<% end %>
<%= simple_form_for(@f_empresa_fornecedora) do |f| %>
  <div class="card">
    <div class="card-header">
      <h5 class="my-0">
        <%= @f_empresa_fornecedora.new_record? ? "Incluir " : "Editar " %><%= t("activerecord.models.#{FEmpresaFornecedora.model_name.i18n_key}.one") %>
      </h5>
    </div>
    <div class="card-body">
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="row">
        <div class="col-3">
          <%= f.input :nome_fantasia, input_html: { class: "capitalize"}, placeholder: "Nome fantasia"  %>
        </div>
        <div class="col-3">
          <%= f.input :razao_social, input_html: { class: "capitalize"}, placeholder: "Razao social"  %>
        </div>
        <div class="col-3">
          <%= f.input :cnjp, input_html: { class: "capitalize"}, placeholder: "Cnjp"  %>
        </div>
        <div class="col-3">
          <%= f.input :endereco, input_html: { class: "capitalize"}, placeholder: "Endereco"  %>
        </div>
        <div class="col-3">
          <%= f.input :telefone, input_html: { class: "capitalize"}, placeholder: "Telefone"  %>
        </div>
        <div class="col-3">
          <%= f.input :contato, input_html: { class: "capitalize"}, placeholder: "Contato"  %>
        </div>
        <div class="col-3">
          <%= f.input :email, input_html: { class: "capitalize"}, placeholder: "Email"  %>
        </div>
        <div class="col-12">
          <%= f.input :a_status_id, collection: AStatus.all, label_method: :descricao, value_method: :id, prompt: "Selecione o Status" %>
        </div>
        <div class="col-12">
          <%= f.input :g_municipio_id, collection: GMunicipio.all, label_method: :descricao, value_method: :id, prompt: "Selecione o Municipio" %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= btn_submit(f) %>
      <%= link_to "Voltar", f_empresas_fornecedoras_path, class: "btn btn-light" %>
    </div>
  </div>
<% end %>